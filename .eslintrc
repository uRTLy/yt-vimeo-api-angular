{
    "parserOptions": {
      "sourceType": "module"
      },
    "plugins": [angular],
    "extends": ["eslint:recommended",angular],
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            2,
            "always"
        ],
        "comma-dangle": 1,
        "comma-spacing": 1,
        "block-spacing": 1,
        "comma-style": 1,
        "array-bracket-spacing": 1,
        "space-before-blocks": 1,
        "space-before-function-paren": 1,
        "space-in-parens": 1,
        "space-unary-ops": 1,
        "space-infix-ops": 1,
        "eqeqeq": 2,
        "curly": 2,
        "default-case": 2,
        "guard-for-in": 2,
        "no-trailing-spaces": 2,
        "no-unused-expressions": 2,
        "no-console": 0,
        "no-eval": 2,
        "max-len": [2, 200],
        "max-lines": 0,
        "no-bitwise": 2,
        "radix": 2,
    },
    "env": {
        "es6": true,
        "browser": true,
    },
    "ecmaFeatures": {
        "modules": true
    },
    "globals" : {
      "describe"   : false,
      "it"         : false,
      "before"     : false,
      "beforeEach" : false,
      "after"      : false,
      "afterEach"  : false
    }
}
